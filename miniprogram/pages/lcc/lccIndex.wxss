/* pages/tPage/tPage.wxss */

page {
  height: 100%;
  width: 100%;
  background: rgb(200, 225, 255);
}

.top_bg {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  /* margin-bottom: 10px; */
  background: rgba(255, 255, 255, 0.384);
  /* box-shadow: 5 5px 3px -1 rgba(0, 0, 0, 0.705); */
  backdrop-filter: blur(1px);
  -webkit-backdrop-filter: blur(15px);
  /* border-radius: 40px; */
  /* border: 1px solid rgba(255, 255, 255, 0.18); */
}

.text-1 {
  height: 20px;
  width: 100%;
  text-align: left;
  white-space: nowrap;
  /* font-family: 'Source Code Pro'; */
  /* overflow: auto; */
}

.control-panel {
  height: 100px;
  display: flex;
  flex-direction: row;
  margin: 10px;
  padding: 5px;
  justify-content: center;
  box-sizing: border-box;
}

.control-panel-content {
  display: flex;
  flex-direction: column;
  overflow: scroll;
  justify-content: space-between;
  box-sizing: border-box;
}

.vertical-split-line {
  margin: 5px;
  padding: 2px;
  border-radius: 50px;
  background-color: #63aff7;
  box-sizing: border-box;
}

.device-list-item {
  max-height: 100px;
  display: flex;
  overflow: scroll;

}

.title {}

.menu {
  width: 100%;
  height: 40%;
  display: flex;
  flex-direction: column;
  margin-top: 10px;
  margin-bottom: 10px;
  padding-top: 10px;
  padding-bottom: 10px;
  /* justify-content: space-around; */
}

.menu_button {
  width: 100%;
  display: block;
  text-align: center;
  font: 20px Arial;
}

/* unused/experimental */
.u_style1 {
  -webkit-box-sizing: content-box;
  -moz-box-sizing: content-box;
  box-sizing: content-box;
  /* width: 100px; */
